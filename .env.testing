# Testing Environment Configuration
# For running automated tests

ENVIRONMENT=testing

# API Settings
TEST_API_URL=http://localhost:8001

# Security Settings (Testing - Disabled for fast tests)
REQUIRE_AUTH=false
REQUIRE_HTTPS=false
ENABLE_RATE_LIMITING=false
ENABLE_WEBSOCKET_AUTH=false

# JWT Settings
JWT_SECRET_KEY=test-secret-key
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Encryption Key
ENCRYPTION_KEY=test-encryption-key-for-automated-tests

# Database (in-memory or temp)
DATABASE_PATH=:memory:  # Use in-memory database for tests

# CORS
CORS_ORIGINS=*

# Logging
LOG_LEVEL=ERROR  # Quiet during tests

# Test API Keys (mock)
BINANCE_API_KEY=test_api_key
BINANCE_API_SECRET=test_api_secret

# Risk Management (small amounts for tests)
ARB_MAX_POSITION_SIZE=1
ARB_MAX_DAILY_TRADES=1
ARB_MAX_LOSS_PERCENT=0.1
ARB_ALLOW_LIVE_EXECUTION=0
ARB_ALLOW_LIVE_ORDERS=0

# Feature Flags
ALLOW_LIVE_ONCHAIN=0
